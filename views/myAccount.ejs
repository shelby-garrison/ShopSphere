<%- include('./partials/header') %>

<div class="bg-white p-8 rounded-lg shadow-lg w-full">
    <h1 class="text-3xl font-bold mb-6">My Account</h1>

    <div class="mb-4">
        <label class="block text-gray-700 font-semibold mb-2">Name:</label>
        <p class="bg-gray-100 p-3 rounded-lg"><%= user.fullname %></p>
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 font-semibold mb-2">Email:</label>
        <p class="bg-gray-100 p-3 rounded-lg"><%= user.email %></p>
    </div>

    <div class="mb-6">
        <label class="block text-gray-700 font-semibold mb-2">Cart Details:</label>
        <div class="bg-gray-50 p-4 rounded-lg shadow-inner">
            <% var totalAmount = 0; %>
            <% if (user.cart && user.cart.length > 0) { %>
                <% user.cart.forEach(item => { %>
                    <% if (item.productid) { %>
                        <% totalAmount += item.amount; %>
                        <div class="flex justify-between p-4 mb-4 bg-white rounded-lg shadow-md">
                            <div>
                                <h3 class="text-lg font-semibold"><%= item.productid.name %></h3>
                                <div class="flex items-center gap-2 mt-2">
                                    <span class="bg-blue-100 text-blue-600 px-3 py-1 rounded-lg"><%= item.quantity %> pcs X ₹<%= item.productid.price %></span>

                                </div>

                            </div>
                            <div class="text-right">
                                <p class="text-lg font-bold text-green-500">₹ <%= item.amount %></p>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="flex justify-between p-4 mb-4 bg-white rounded-lg shadow-md">
                            <p class="text-red-500">Product details unavailable.</p>
                        </div>
                    <% } %>
                <% }); %>
                <p class="text-gray-500">Add more items to your cart  <a href="/shop" class="text-blue-500 hover:underline">now</a> !</p>

            <% } else { %>
                <p class="text-gray-500">Your cart is empty.</p>
                <p class="text-gray-500">Add items to your cart  <a href="/shop" class="text-blue-500 hover:underline">now</a> !</p>
            <% } %>
  
            <div class="flex justify-end mt-4">
                <div class="bg-gray-100 p-4 rounded-lg shadow-md w-full md:w-1/3">
                    <h3 class="text-xl font-semibold mb-2">Total Amount</h3>
                    <p id="rzp-text" class="text-2xl font-bold text-green-500">₹ <%= totalAmount %></p>
                </div>
            </div>
        </div>
    </div>

