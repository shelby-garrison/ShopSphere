<%- include('./partials/header') %>


    <div class="bg-white p-8 rounded-lg shadow-lg w-full ">
        <h1 class="text-3xl font-bold mb-6">My Account</h1>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2">Name:</label>
            <p class="bg-gray-100 p-3 rounded-lg"><%= user.fullname %></p>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2">Email:</label>
            <p class="bg-gray-100 p-3 rounded-lg"><%= user.email %></p>
        </div>
        <div class="mb-4">
            <label class="block text-gray-700 font-semibold mb-2">Cart Details:</label>
            
        </div>
        
<div class="container mx-auto px-4 py-8">
    <% var totalAmount = 0; %>
    <% user.cart.forEach(item => { %>
        <% totalAmount += item.amount; %>
       
   
            <div class="md:w-2/3 flex flex-col justify-between p-4">
                <p><%= item.productid.name %></p>
                <div>
                    
                    <div class="flex items-center gap-2 mb-2">
                        <span class="px-3 py-1 bg-gray-200 rounded-lg quantity " ><%= item.quantity %></span>
                    </div>
                </div>
                <div class="flex justify-between items-center">
                    <p class="text-lg text-gray-600">Net Total</p>
                    <p id="amount"class="text-lg font-semibold amount">₹ <%= item.amount %></p>
                </div>
            </div>
            
        
    <% }); %>

    <div class="mt-8 flex justify-end">
        <div class="bg-gray-100 p-4 rounded-lg shadow-md w-full md:w-1/3">
            <h3 class="text-xl font-semibold mb-4">Total Amount</h3>
            <p id="rzp-text" class="text-2xl font-bold text-green-500" >₹ <%= totalAmount %></p>
            
        </div>
    </div>
</div>
        <div class="flex justify-end">
            <a href="/editProfile" class="text-blue-500 hover:underline">Edit Profile</a>
        </div>
    </div>





<%- include('./partials/footer') %>